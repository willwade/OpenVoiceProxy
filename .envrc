# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=production

# Server Configuration
PORT=3000
LOG_LEVEL=info

# Security Configuration
export API_KEY_REQUIRED=false
CORS_ORIGIN=*
TRUST_PROXY=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Request Limits
MAX_REQUEST_SIZE=10mb
# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log to console (useful for development)
LOG_TO_CONSOLE=true

# Log to files (useful for development)
LOG_TO_FILE=false
LOG_DIR=./logs

# =============================================================================
# AUDIO CONFIGURATION
# =============================================================================

# Audio format (wav, mp3)
AUDIO_FORMAT=wav

# Audio quality (low, medium, high)
AUDIO_QUALITY=medium

# Enable audio caching
CACHE_ENABLED=false

# Cache directory (for file-based caching)
CACHE_PATH=/tmp/tts-cache


# =========================================
# ESP32/Embedded Device Settings
# =========================================
# Default TTS engine for /api/speak endpoint
export ESP32_DEFAULT_ENGINE=azure

# Default voice for /api/speak endpoint
export ESP32_DEFAULT_VOICE=en-US-JennyNeural

# Default sample rate for PCM output
export ESP32_DEFAULT_SAMPLE_RATE=16000

# Maximum text length (characters) for /api/speak
export ESP32_MAX_TEXT_LENGTH=500
SKIP_OAUTH=true
DYLD_LIBRARY_PATH=$PWD/node_modules/sherpa-onnx-darwin-arm64
DYLD_FALLBACK_LIBRARY_PATH=$PWD/node_modules/sherpa-onnx-darwin-arm64
SHERPA_ONNX_NODE_PATH=$PWD/node_modules/sherpa-onnx-darwin-arm64/sherpa-onnx.node
