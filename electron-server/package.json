{
  "name": "openvoiceproxy-electron",
  "version": "1.0.0",
  "description": "Electron shell for OpenVoiceProxy with Windows packaging (NSIS)",
  "main": "src/main.js",
  "author": "Will Wade",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "start": "electron .",
    "dev": "npm --prefix .. run build:tts && electron . --dev",
    "build": "electron-builder --win",
    "build:nsis": "electron-builder --win nsis",
    "build:cli": "dotnet publish ./cli-dotnet/CallTTS/CallTTS.csproj -c Release -r win-x64 -p:PublishSingleFile=true -p:SelfContained=true -p:IncludeNativeLibrariesForSelfExtract=true -p:DebugType=None -p:DebugSymbols=false -o dist",
    "build:all": "npm --prefix ../tts-proxy run build && npm run build:cli && npm run build"
  },
  "dependencies": {
    "openvoiceproxy": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  }
}
