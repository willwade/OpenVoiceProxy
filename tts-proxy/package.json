{
  "name": "openvoiceproxy",
  "version": "1.0.0",
  "description": "OpenVoiceProxy - Secure TTS proxy that intercepts ElevenLabs API calls and redirects to various TTS engines",
  "main": "server-production.cjs",
  "type": "module",
  "scripts": {
    "start": "node server-production.cjs",
    "start:production": "node server-production.cjs",
    "start:server": "node start-server.cjs",
    "start:ts": "tsx src/index.ts",
    "dev": "electron . --dev",
    "dev:ts": "tsx watch src/index.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "build:ts": "tsc",
    "build:admin": "cd admin-ui && npm run build",
    "build": "npm run build:admin",
    "build:all": "npm run build",
    "postinstall": "cd admin-ui && npm install"
  },
  "keywords": [
    "tts",
    "proxy",
    "openvoiceproxy",
    "elevenlabs",
    "azure",
    "openai",
    "aws-polly",
    "google-tts"
  ],
  "author": "Will Wade",
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.10.0",
    "@types/pg": "^8.11.10",
    "@types/ws": "^8.5.13",
    "@vitest/coverage-v8": "^2.1.8",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "pkg": "^5.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@aws-sdk/client-polly": "^3.821.0",
    "@google-cloud/text-to-speech": "^6.1.0",
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.4.2",
    "axios": "^1.13.2",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "decompress": "^4.2.1",
    "decompress-bzip2": "^4.0.0",
    "decompress-tarbz2": "^4.1.1",
    "decompress-targz": "^4.1.1",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "hono": "^4.6.14",
    "js-tts-wrapper": "^0.1.63",
    "mespeak": "^2.0.2",
    "microsoft-cognitiveservices-speech-sdk": "^1.44.0",
    "node-fetch": "^2.7.0",
    "node-wav": "^0.0.2",
    "openai": "^4.104.0",
    "pcm-convert": "^1.6.5",
    "pg": "^8.11.3",
    "sherpa-onnx-node": "^1.12.19",
    "tar-stream": "^3.1.7",
    "text2wav": "^0.0.14",
    "winston": "^3.11.0",
    "ws": "^8.18.3",
    "zod": "^3.24.1"
  },
  "optionalDependencies": {
    "sound-play": "^1.1.0",
    "sherpa-onnx-darwin-arm64": "^1.12.19"
  }
}
