# TTS Proxy Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# AUTHENTICATION MODE
# =============================================================================
# By default (NODE_ENV not set), runs WITHOUT authentication for easy testing.
#
# NODE_ENV=production         # Enables authentication (production mode)
# NODE_ENV=development        # Skips authentication (explicit dev mode)
# API_KEY_REQUIRED=true       # Require API keys even when not in production
# LOCAL_MODE=true             # Skip auth (for Electron/embedded/local use)

# =============================================================================
# TTS ENGINE CREDENTIALS
# =============================================================================

# Azure Cognitive Services (optional)
# Get from: https://portal.azure.com
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=westeurope

# ElevenLabs API (optional - for comparison testing)
# Get from: https://elevenlabs.io/app/settings
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Google Cloud TTS (optional)
# Set path to your service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# AWS Polly (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# OpenAI TTS (optional)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# SERVER SETTINGS
# =============================================================================

# Proxy Settings
PROXY_PORT=3000
LOG_LEVEL=info

# Note: eSpeak and SherpaOnnx work without API keys
